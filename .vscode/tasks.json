        */

        {
            "type": "shell",
            "label": "Rose Announce Start",
            "command": "rose",
            "args": [
                "-broadcastInfo",
                "Start compiling",
            ],
            "group": {
                "kind": "build",
            }
        },

        {
            "type": "shell",
            "label": "Rose Parse",
            "command": "rose.parser",
            "args": [
                "-I",
                "world.h",
                "-O",
                "world.serializer.h"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
            }
        },

        {
            "type": "shell",
            "label": "Rose Compile",
            "command": "rose.compile",
            "args": [
                "${file}",
                "-v",
                "-o", ".build\\${fileBasenameNoExtension}.dll",
            ],
            //*
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/.vscode"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5,
                },
            },
            //*/
            //"problemMatcher":"$msCompile",
            "options": {
                "cwd": "${fileDirname}\\..",
            },
            "group": {
                "kind": "build",
            },
        },

        {
            "type": "shell",
            "label": "Rose Announce OK",
            "command": "rose",
            "args": [
                "-broadcastSuccess",
                "Finished Compiling",
            ],
            "group": {
                "kind": "build",
            }
        },

        {
            "type": "shell",
            "label": "Rose Clean",
            "command": "Remove-Item",
            "args": [
                "*.obj,",
                "*.pdb",
            ],
            "options": {
                "cwd": "${fileDirname}\\.."
            },
            "group": {
                "kind": "build",
            }
        },
        
        {
            "type": "shell",
            "label": "Rose Build",
            "command": "echo",
            "args": [
                "Build Finished",
            ],
            "options": {
                "cwd": "${fileDirname}\\.."
            },
                        
            "dependsOrder": "sequence",
            "dependsOn": ["Rose Announce Start", "Rose Parse", "Rose Compile", "Rose Announce OK", "Rose Clean"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },


    ],
    "version": "2.0.0"
}